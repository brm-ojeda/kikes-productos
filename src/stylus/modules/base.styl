/*
-deben ser elementos por default que lucirán igual en todo el sitio, es .
-ningún estilo de estos elementos selectores deberá usar !important.
-no usar selectores tipo class o id.
*/


a
	&:link
		text-decoration none

body
	color $gris
	font-size 1.3em
	
h1, h2, h3
	color darken($naranja, 30%)
	font-family $varela

ul
	list-style none
	text-decoration none

#arrow-down
	display none

#caja
	display block
	height 0
	overflow-y hidden
	width 100%

#caja-dos
	display block
	height 0
	overflow-y hidden
	width 100%

#cont-especificaciones
	display block
	padding 1.5rem 2rem

#cont-beneficios
	display none
	height 33rem
	overflow-y auto
	padding 1.5rem 2rem

.card-tab	
	a
		&:link
			text-decoration none
	
	p
		background-color #ffffff
		border-radius 0 0 .7rem .7rem
		color #409e50
		font-size 2rem
		font-weight 400
		margin 0 auto
		padding 1.2rem 0
		transition all ease-in-out .3s
	
		&:hover
			background-color #409e50
			color #ffffff

	figure
		background #409e50
		border-radius .7rem .7rem 0 0

		img
			background-color #409e50
			opacity 1
			transition .3s ease-in-out
			width 100%

		&:hover
			img
				opacity .3
	
	.cont-card
		border-radius .7rem
		box-shadow 0px 1px 6px #0000005c
		margin 0 auto
		width 95%

.carousel-item
	background #378145 !important
	border-radius .7rem
	box-shadow 0px 1px 6px #0000005c
	height auto
	margin 1rem 1rem 4rem 1rem
	overflow hidden
		
	
	&:focus
		outline none

	figure
		img
			border-radius .7rem .7rem 0 0
			width 100%

	.cont-titulo
		background-color #409e50
		text-align left

		h5
			color #ffffff
			display inline-block
			font-size 1.6rem
			font-weight 400
			letter-spacing .1rem
			margin 0
			padding 1.2rem 0 1.2rem 2rem
			text-align left
			text-transform uppercase			

		.btn-row-down
			background-color #378144
			border-radius 50%
			display inline-block
			float right
			height 3rem
			margin .6rem 1.5rem 0px 0
			transition all ease-in-out .3s
			width 3rem
			z-index 25

		&:hover
			.btn-row-down
				background-color #ffc708
				box-shadow 0px 1px 6px #0000005c
				transition all ease-in-out .3s
				
		img
			margin 0 auto
			padding-top 0.6rem
			vertical-align sub
			width 2.1rem
		
.carousel-indicators
	bottom 10px
	left 0 !important
	margin-left 0 !important
	position relative !important
	text-align center
	width 100% !important
	z-index 15

.prev-slide, .next-slide, .prev-slide-02, .next-slide-02, .prev-slide-03, .next-slide-03
	padding 9rem 2rem
	position absolute
	top 10px
	z-index 2
	
	img
		width 2rem

.prev-slide, .prev-slide-02, .prev-slide-03
	background linear-gradient(to left, rgba(255,0,0,0), rgba(0, 0, 0, 0.1))
	border-radius .7rem 0 0 0
	left 12px
	transition all ease-in-out .3s
	
	&:hover
		background linear-gradient(to left, rgba(255,0,0,0), rgba(0, 0, 0, 0.2))
		transition all ease-in-out .3s

	
.next-slide, .next-slide-02, .next-slide-03
	background 	linear-gradient(to right, rgba(255,0,0,0), rgba(0, 0, 0, 0.1))
	border-radius 0 .7rem 0 0
	right 12px
	transition all ease-in-out .3s
	
	&:hover
		background 	linear-gradient(to right, rgba(255,0,0,0), rgba(0, 0, 0, 0.2))

.slick-slide
	color white
	text-align center

.slick-dots
	li
		margin 0 !important
		
		button
			&:before
				font-size 3.7rem !important

		&.slick-active
			button
				opacity 1 !important
				

				&:before
					color #ffc80e !important
					font-size 3.7rem !important
					opacity 1 !important


// mobil
@media (max-width: 770px)

	.prev-slide, .prev-slide-02, .prev-slide-03
		display none !important

	.next-slide, .next-slide-02, .next-slide-03
		display none !important

